<body>
    <div class="container">
        <h1>Text to Speech Converter</h1>
        
        <div class="input-section">
            <textarea id="text-input" placeholder="Something you want to hear...">Hello! This is a text to speech converter. Try typing your own message!</textarea>
        </div>
        
        <div class="controls">
            <div class="control-group">
                <label for="voice-select">Select Voice:</label>
                <select id="voice-select">
                    <option value="">Loading voices...</option>
                </select>
            </div>
        </div>
        
        <button id="speak-btn">
            Speak Text
        </button>
        
        <div class="status" id="status-text">
            Ready to convert text to speech
        </div>
    </div>

    <script>
        // DOM Elements
        const textInput = document.getElementById('text-input');
        const speakBtn = document.getElementById('speak-btn');
        const voiceSelect = document.getElementById('voice-select');
        const statusText = document.getElementById('status-text');
        
        // Speech variables
        let voices = [];
        let currentSpeech = null;
        
        // Initialize the app
        function init() {
            // Load available voices
            loadVoices();
            
            // If voices aren't loaded yet, wait for them
            if (speechSynthesis.onvoiceschanged !== undefined) {
                speechSynthesis.onvoiceschanged = loadVoices;
            }
            
            // Set up button click event
            speakBtn.addEventListener('click', speakText);
            
            // Allow pressing Enter key to speak (Ctrl+Enter for textarea)
            textInput.addEventListener('keydown', (e) => {
                if (e.ctrlKey && e.key === 'Enter') {
                    speakText();
                }
            });
        }
        
        // Load available voices
        function loadVoices() {
            voices = speechSynthesis.getVoices();
            voiceSelect.innerHTML = '';
            
            if (voices.length === 0) {
                voiceSelect.innerHTML = '<option value="">No voices available</option>';
                return;
            }
            
            // Add voices to dropdown
            voices.forEach((voice, index) => {
                const option = document.createElement('option');
                option.value = index;
                option.textContent = `${voice.name} (${voice.lang})`;
                voiceSelect.appendChild(option);
            });
            
            // Try to select an English voice by default
            const englishVoiceIndex = voices.findIndex(voice => voice.lang.startsWith('en'));
            if (englishVoiceIndex !== -1) {
                voiceSelect.value = englishVoiceIndex;
            }
        }
        
        // Convert text to speech
        function speakText() {
            // Stop any ongoing speech
            if (currentSpeech) {
                speechSynthesis.cancel();
            }
            
            const text = textInput.value.trim();
            
            if (text === '') {
                statusText.textContent = "Please enter some text to speak!";
                statusText.className = 'status';
                return;
            }
            
            if (voices.length === 0) {
                statusText.textContent = "No voices available. Please try again.";
                statusText.className = 'status';
                return;
            }
            
            // Create a new SpeechSynthesisUtterance
            currentSpeech = new SpeechSynthesisUtterance();
            
            // Set the text
            currentSpeech.text = text;
            
            // Set the selected voice
            const voiceIndex = parseInt(voiceSelect.value);
            if (!isNaN(voiceIndex) && voiceIndex >= 0 && voiceIndex < voices.length) {
                currentSpeech.voice = voices[voiceIndex];
            }
            
            // Set a moderate rate
            currentSpeech.rate = 1.0;
            currentSpeech.pitch = 1.0;
            
            // Event listeners for the speech
            currentSpeech.onstart = function() {
                statusText.textContent = "Speaking...";
                statusText.className = 'status speaking';
                speakBtn.textContent = "Stop Speech";
                speakBtn.style.background = "linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%)";
            };
            
            currentSpeech.onend = function() {
                statusText.textContent = "Finished speaking";
                statusText.className = 'status';
                speakBtn.textContent = "Speak Text";
                speakBtn.style.background = "linear-gradient(135deg, #667eea 0%, #764ba2 100%)";
                currentSpeech = null;
            };
            
            currentSpeech.onerror = function(event) {
                statusText.textContent = "Error: Could not speak text";
                statusText.className = 'status';
                speakBtn.textContent = "Speak Text";
                speakBtn.style.background = "linear-gradient(135deg, #667eea 0%, #764ba2 100%)";
                currentSpeech = null;
            };
            
            // Speak the text
            speechSynthesis.speak(currentSpeech);
            statusText.textContent = "Starting speech...";
        }
        
        // Initialize when page loads
        window.addEventListener('DOMContentLoaded', init);
    </script>
</body>
</html>
